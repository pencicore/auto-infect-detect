<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.infect.mapper.UserMapper">
    <select id="selectNameAndDepartmentByIds" resultType="com.infect.vo.system.ImportantUserInfoVO">
        select userId, name, department from user where
        UserID IN
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
</mapper>
